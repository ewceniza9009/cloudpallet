// WMS.Api/appsettings.Development.json (Revised Connection String)
{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    // Option 1: Use this for Windows Authentication if your user has DB permissions.
    "DefaultConnection": "Server=localhost;Database=WmsColdStorageDb;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True"

    // Option 2: Use this for SQL Server Authentication (replace with your credentials).
    // This is often more explicit and reliable in various environments.
    //"DefaultConnection": "Server=localhost;Database=WmsColdStorageDb;User Id=your_sql_user;Password=your_strong_password;MultipleActiveResultSets=true;TrustServerCertificate=True"
  },
  "JwtSettings": {
    "Issuer": "wms-dev-issuer",
    "Audience": "wms-dev-audience",
    "SecretKey": "SOME_SUPER_SECRET_AND_LONG_KEY_FOR_HMACSHA256_!@#$%^&*()"
  }
}